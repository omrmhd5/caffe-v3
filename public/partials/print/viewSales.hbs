<style>
  .table { border-collapse: collapse; color: black; } th p { color: black; }
  .table td, .table th { height: 75% !important; padding: .2rem !important;
  text-align: center; } #page-title { border: 1px solid black; display: flex;
  justify-content: center; align-items: center; padding: auto; color: black;
  height: 75px; width: 680px; margin: 50px auto; } .tail-border { border: 1px
  solid black; display: flex; justify-content: center; align-items: center;
  color: black; height: 60px; width: 320px; margin: 50px auto; } .table-bordered
  td, .table-bordered th { text-align: center; border-color: black !important; }
  .print-border { border: 1px solid black; } /* Page numbering - only using
  @page rule */ @media print { @page { @bottom-center { content: counter(page);
  font-size: 18px; color: black; margin-bottom: 20px; font-weight: bold; } } }
</style>

<div class="d-none d-print-block" dir="rtl" style="border: 1px solid white;">
  <div id="page-title">
    <h2 style="text-align: center;">
      المبيعات
      {{#if branch}}
        فرع
        {{branch.branchname}}
        <br />
        من
        {{fromDate}}
        إلى
        {{toDate}}
      {{/if}}
    </h2>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10">
        <div class="table-responsive">
          <table id="add-row" class="display table table-bordered">
            <thead>
              <tr>
                <th scope="col"> <p> # </p></th>
                <th scope="col"> <p> اسم الصنف </p> </th>
                <th scope="col"> <p> السعر </p></th>
                <th scope="col"> <p> العدد المباع </p></th>
                <th scope="col"> <p> اجمالي السعر </p></th>
              </tr>
            </thead>
            <tbody>
              {{#each printedData}}
                <tr>
                  <th scope="row">{{incremented @index}}</th>
                  <td>{{itemID.itemName}}</td>
                  <td>{{price}}</td>
                  <td>{{checkOrZeror boughtquantity}}</td>
                  <td><strong class="total-price">{{totalprice}}</strong></td>
                </tr>
              {{/each}}
              <tr>
                <td><strong>المجموع</strong></td>
                <td> -- </td>
                <td> -- </td>
                <td> -- </td>
                <td><strong id="salesTotal"></strong></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-1"></div>
    </div>
  </div>
</div>